{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Image",
              "url": "https://botdepot.blob.core.windows.net/imagenes-sally/Logicalis_2019_CMYK_REV.png",
              "size": "Medium"
            }
          ],
          "verticalContentAlignment": "Center"
        }
      ],
      "horizontalAlignment": "Center"
    },
    {
      "type": "TextBlock",
      "text": "Bienvenido $(welcomeUser). En que puedo ayudarte?",
      "weight": "Bolder",
      "separator": true
    },
    {
      "type": "TextBlock",
      "text": "Para generar una reunion de Webex escribir: \"Crear reservacion\""
    }
  ]
}